<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.localgis</groupId>
	<artifactId>localgis-parent-artifacts</artifactId>
	<packaging>pom</packaging>
	<version>3.0</version>
	<name>Localgis parent artifacts</name>


	<profiles>
		<profile>
			<id>localgis3_default</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
			</build>
		</profile>
		<profile>
			<id>manage_geopista_license</id>			
			<build>
				
				<plugins>
					<plugin>
						<groupId>com.mycila</groupId>
						<artifactId>license-maven-plugin</artifactId>
						<version>2.6.1</version>
						<configuration>
							<!---->
							<!--basedir>localgis-parent</basedir-->
							<!--header>com/mycila/maven/plugin/license/templates/APACHE-2.txt</header-->
							<header>com/localgis/license/templates/GPLMINETUR.txt</header>
							<!--header>../localgis-parent/src/main/resources/com/localgis/license/templates/GEOPISTA.txt</header-->
							<properties>
								<owner>MINETUR</owner>
								<year>2014</year>
								<email>pals@minetur.es</email>
							</properties>		
							<keywords>
								<!--keyword>© MINETUR</keyword-->
								<keyword>Copyright (C) 2004 INZAMAC-SATEC UTE</keyword>
							</keywords>
							<includes>
								<!--include>**/CAnexosTableModel.java</include-->
								<include>**/*.java</include>
							</includes>
							<dryRun>false</dryRun>
							<encoding>ISO8859-1</encoding>		
							<failIfMissing>false</failIfMissing>		
							<concurrencyFactor>1</concurrencyFactor>
						</configuration>
						<!--executions>
							<execution>
								<goals>
									<goal>format</goal>
								</goals>
							</execution>
						</executions-->
						<dependencies>
							<dependency>
								<groupId>com.localgis</groupId>
								<artifactId>localgis-license</artifactId>
								<version>3.0</version>
							</dependency>
							<dependency>
								<groupId>org.springframework</groupId>
								<artifactId>spring-core</artifactId>
								<version>3.1.3.RELEASE</version>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>
				<profile>
			<id>manage_minetur_gpl_license</id>
			<build>
				
				<plugins>
					<plugin>
						<groupId>com.mycila</groupId>
						<artifactId>license-maven-plugin</artifactId>
						<version>2.6.1</version>						
						<configuration>
							<!--basedir>localgis-parent</basedir-->
							<!--header>com/mycila/maven/plugin/license/templates/APACHE-2.txt</header-->
							<header>com/localgis/license/templates/GPLMINETUR.txt</header>
							<!--header>../localgis-parent/src/main/resources/com/localgis/license/templates/GEOPISTA.txt</header-->
							<properties>
								<owner>MINETUR</owner>
								<year>2014</year>
								<email>pals@minetur.es</email>
							</properties>		
							<keywords>
								<keyword>© MINETUR</keyword>
								<keyword>Copyright (C) 2003 Vivid Solutions</keyword>
								<keyword>Copyright</keyword>
								<!--keyword>Copyright (C) 2004 INZAMAC-SATEC UTE</keyword-->
							</keywords>
							<includes>
								<!--include>**/ReloadLayerPlugIn.java</include-->
								<include>**/*.java</include>
								<!--include>**/ProvinciaOT.java</include-->
								<!--include>**/WfsG.java</include-->
							</includes>

							<dryRun>false</dryRun>
							<encoding>ISO8859-1</encoding>		
							<failIfMissing>false</failIfMissing>
							<concurrencyFactor>1</concurrencyFactor>
							<skipExistingHeaders>true</skipExistingHeaders>							
						</configuration>						
						<dependencies>
							<dependency>
								<groupId>com.localgis</groupId>
								<artifactId>localgis-license</artifactId>
								<version>3.0</version>
							</dependency>
							<dependency>
								<groupId>org.springframework</groupId>
								<artifactId>spring-core</artifactId>
								<version>3.1.3.RELEASE</version>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>manage_minetur_eupl_license</id>
			<build>
				
				<plugins>
					<plugin>
						<groupId>com.mycila</groupId>
						<artifactId>license-maven-plugin</artifactId>
						<version>2.6.1</version>						
