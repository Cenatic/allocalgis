<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.localgis</groupId>
	<artifactId>localgis-apps</artifactId>
	<packaging>pom</packaging>
	<version>3.0</version>
	<name>LocalGIS Webapps</name>
		<parent>
		<artifactId>localgis-parent-artifacts</artifactId>
		<groupId>com.localgis</groupId>
		<version>3.0</version>
	</parent>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-site-plugin</artifactId>
				<version>2.0</version>
				<configuration>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<target>1.7</target>
					<source>1.7</source>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<modules>	
		
		<!-- modulos web iniciales -->
		<module>${appModulesPath}/localgis-software</module>
		<module>${appModulesPath}/localgis-root</module>
		
		<module>${appWebAppsPath}/GuiaUrbana/localgis-web</module>
		<module>${appWebAppsPath}/GuiaUrbana/localgis-webmanager</module>
		<module>${appWebAppsPath}/GuiaUrbana/localgis-wfsg</module>
		<module>${appWebAppsPath}/GuiaUrbana/localgis-geowfst</module>
		<module>${appWebAppsPath}/GuiaUrbana/localgis-wfs-mne</module>
		
		<!-- Aplicaciones de firma -->
		<module>${appWebAppsPath}/firma/localgis-firmadigital</module>
		<module>${appWebAppsPath}/firma/CryptoApplet</module>

		<!-- Aplicaciones SOA -->
		<module>${appWebAppsPath}/soa/PublishLayers</module>
		<module>${appWebAppsPath}/soa/LocalWebWS</module>
		<module>${appWebAppsPath}/soa/SOALocalGIS</module>
		<module>${appWebAppsPath}/soa/LocalGISGeoWebServices</module>
		<module>${appWebAppsPath}/LouRED/localgis-gestorfip-ws</module>
		<module>${appWebAppsPath}/GeorreferenciaExternaWeb/localgis-georreferenciaexterna-ws</module>
		
		<module>${appWebAppsPath}/AgendaLocal21/AgendaLocal21-AppWeb</module>
		<module>${appWebAppsPath}/AgendaLocal21/AgendaLocal21-DataModel</module>
		
	</modules>	
</project>
