<Context debug="10" path="/Registry">
		<Resource auth="Container" 
			  driverClassName="org.postgresql.Driver" 
			  maxActive="10" 
			  maxIdle="4" 
			  name="jdbc/systemversion" 
			  password="${localgis_database_password}" 
			  type="javax.sql.DataSource" 
			  url="${localgis_database_url}?autoReconnect=true" 
			  username="${localgis_database_username}" 
			  validationQuery="select 1"/>
			
</Context>
