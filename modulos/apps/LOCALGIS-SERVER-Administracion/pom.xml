<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.localgis.server</groupId>
	<artifactId>localgis-server-administracion</artifactId>
	<packaging>war</packaging>
	<name>localgis-server-administracion</name>
	<parent>
		<artifactId>localgis-parent-sysServer</artifactId>
		<groupId>com.localgis</groupId>
		<version>3.0</version>
	</parent>
	<properties>
		<jettyWeb.fileName>jetty-web.xml</jettyWeb.fileName>
		<jettyWeb.targetDirectory>/src/main/webapp/WEB-INF</jettyWeb.targetDirectory>
		<jettyWeb.urlFileWar>/webapps/${project.artifactId}-${project.version}.war</jettyWeb.urlFileWar>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<webResources>
						<resource>
							<directory>${jettyWeb.targetDirectory}</directory>
							<targetPath>/WEB-INF</targetPath>
							<filtering>true</filtering>
						</resource>
						<resource>
							<directory>${jettyWeb.targetDirectory}</directory>
							<targetPath>/META-INF</targetPath>
							<filtering>true</filtering>
							<includes>
								<include>${jettyWeb.fileName}</include>
							</includes>
						</resource>
					</webResources>
					<webXml>src\main\webapp\WEB-INF\web.xml</webXml>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>com.localgis.context</groupId>
			<artifactId>localgis-context</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>com.localgis.servercontext</groupId>
			<artifactId>localgis-servercontext</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>com.localgis.servercontext</groupId>
			<artifactId>localgis-servercontext-administracion</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>com.localgis.servercontext</groupId>
			<artifactId>localgis-servercontext-sigm</artifactId>
			<version>3.0</version>
			<exclusions>
		  		<exclusion>
		  			<groupId>*</groupId>
		  			<artifactId>*</artifactId>
		  		</exclusion>
		  	</exclusions>
	  </dependency>
	  <dependency>
			<groupId>com.localgis.web</groupId>
			<artifactId>localgis-core-geowfst</artifactId>
			<version>3.0</version>
	  </dependency>
		<dependency>
			<groupId>com.localgis.protocol</groupId>
			<artifactId>localgis-protocol</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>com.localgis.model</groupId>
			<artifactId>localgis-model</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>com.localgis.utils</groupId>
			<artifactId>localgis-utils</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>com.experlog</groupId>
			<artifactId>xapool</artifactId>
			<version>1.4</version>
		</dependency>
		<dependency>
			<groupId>org.codehaus.castor</groupId>
			<artifactId>castor-xml</artifactId>
			<version>1.3.2</version>
		</dependency>	
		<dependency>
			<groupId>org.codehaus.xfire</groupId>
			<artifactId>xfire-all</artifactId>
			<version>1.2.6</version>
		</dependency>
		<dependency>
			<groupId>org.codehaus.xfire</groupId>
			<artifactId>xfire-core</artifactId>
			<version>1.2.6</version>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.4</version>
		</dependency>
		
		<dependency>
	    	<groupId>postgresql</groupId>
	    	<artifactId>postgresql</artifactId>	    	
			<version>8.0-318.jdbc3</version>	    	
			<scope>provided</scope>
	    </dependency>
		<dependency>
		   <groupId>org.postgis</groupId>
		   <artifactId>postgis-jdbc</artifactId>
		   <version>1.3.3</version>
		   <scope>provided</scope>
		   <exclusions>
			  <exclusion>
				 <groupId>org.postgis</groupId>
				 <artifactId>postgis-stubs</artifactId>
			  </exclusion>
		   </exclusions>
		</dependency>
	</dependencies>

</project>