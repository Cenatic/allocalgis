<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.localgis.server</groupId>
	<artifactId>localgis-server-catastro</artifactId>
	<version>3.0</version>
	<packaging>war</packaging>
	<name>localgis-server-catastro</name>
	<parent>
		<artifactId>localgis-parent</artifactId>
		<groupId>com.localgis</groupId>
		<version>3.0</version>
	</parent>
	
	
	<properties>
		<jettyWeb.fileName>jetty-web.xml</jettyWeb.fileName>
		<jettyWeb.targetDirectory>/src/main/webapp/WEB-INF</jettyWeb.targetDirectory>
		<jettyWeb.urlFileWar>/webapps/${project.artifactId}-${project.version}.war</jettyWeb.urlFileWar>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<webResources>
						<resource>
							<directory>${jettyWeb.targetDirectory}</directory>
							<targetPath>/WEB-INF</targetPath>
							<filtering>true</filtering>
						</resource>
						<resource>
							<directory>${jettyWeb.targetDirectory}</directory>
							<targetPath>/META-INF</targetPath>
							<filtering>true</filtering>
							<includes><include>${jettyWeb.fileName}</include></includes>
						</resource>
					</webResources>
					<webXml>src\main\webapp\WEB-INF\web.xml</webXml>
				</configuration>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-antrun-plugin
										</artifactId>
										<versionRange>
											[1.3,)
										</versionRange>
										<goals>
											<goal>run</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>com.localgis.context</groupId>
			<artifactId>localgis-context</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>com.localgis.servercontext</groupId>
			<artifactId>localgis-servercontext</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>com.localgis.servercontext</groupId>
			<artifactId>localgis-servercontext-catastro</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
	    	<groupId>postgresql</groupId>
	    	<artifactId>postgresql</artifactId>	    	
			<version>8.0-318.jdbc3</version>	    	
			<scope>provided</scope>
	    </dependency>
		<dependency>
		   <groupId>org.postgis</groupId>
		   <artifactId>postgis-jdbc</artifactId>
		   <version>1.3.3</version>
		   <scope>provided</scope>
		   <exclusions>
			  <exclusion>
				 <groupId>org.postgis</groupId>
				 <artifactId>postgis-stubs</artifactId>
			  </exclusion>
		   </exclusions>
		</dependency>
	</dependencies>
	
</project>