<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.localgis.server</groupId>
	<artifactId>localgis-server-programadortareas</artifactId>
	<version>3.0</version>
	<packaging>war</packaging>
	<name>localgis-server-programadortareas</name>
	<parent>
		<artifactId>localgis-parent</artifactId>
		<groupId>com.localgis</groupId>
		<version>3.0</version>
	</parent>
	
	<properties>
		<jettyWeb.fileName>jetty-web.xml</jettyWeb.fileName>
		<jettyWeb.targetDirectory>/src/main/webapp/WEB-INF</jettyWeb.targetDirectory>
		<jettyWeb.urlFileWar>/webapps/${project.artifactId}-${project.version}.war</jettyWeb.urlFileWar>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<webResources>
						<resource>
							<directory>${jettyWeb.targetDirectory}</directory>
							<targetPath>/WEB-INF</targetPath>
							<filtering>true</filtering>
						</resource>
						<resource>
							<directory>${jettyWeb.targetDirectory}</directory>
							<targetPath>/META-INF</targetPath>
							<filtering>true</filtering>
							<includes><include>${jettyWeb.fileName}</include></includes>
						</resource>
					</webResources>
					<webXml>src\main\webapp\WEB-INF\web.xml</webXml>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>com.localgis.context</groupId>
			<artifactId>localgis-context</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>com.localgis.protocol</groupId>
			<artifactId>localgis-protocol</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>com.localgis.servercontext</groupId>
			<artifactId>localgis-servercontext</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>com.localgis.app</groupId>
			<artifactId>localgis-apps-eielindicadoresbatchgenerator</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>com.localgis.app</groupId>
			<artifactId>localgis-apps-luceneindexer</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>com.localgis.app</groupId>
			<artifactId>localgis-apps-reloadexternallayers</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>xstream</groupId>
			<artifactId>xstream</artifactId>
			<version>1.2.2</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.6.1</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.6.1</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.16</version>
		</dependency>
		<!-- <dependency> <groupId>quartz</groupId> <artifactId>quartz</artifactId> 
			<version>1.5.2</version> </dependency> -->
		<dependency>
			<groupId>org.quartz-scheduler</groupId>
			<artifactId>quartz</artifactId>
			<version>2.1.3</version>
		</dependency>
		
		<dependency>
        	<groupId>javax.transaction</groupId>
        	<artifactId>transaction-api</artifactId>
       	 <version>1.1</version>
     	 </dependency>
		 <dependency>
	    	<groupId>postgresql</groupId>
	    	<artifactId>postgresql</artifactId>	    	
			<version>8.0-318.jdbc3</version>	    	
			<scope>provided</scope>
	    </dependency>
		<dependency>
		   <groupId>org.postgis</groupId>
		   <artifactId>postgis-jdbc</artifactId>
