<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>localgis-parent</artifactId>
		<groupId>com.localgis</groupId>
		<version>3.0</version>
	</parent>
	<groupId>com.localgis</groupId>
	<artifactId>installers</artifactId>
	<version>3.0.0</version>
	<packaging>pom</packaging>
	<name>InstaladoresActualizadores</name>
	<description>Agrupador de todos los módulos de Instalación y Actualización</description>

<!-- 
	<modules>
		<module>Actualizaciones</module>
		<module>Apps</module>
		<module>DataModel</module>
		<module>Instalaciones</module>
		<module>Servers</module>
		<module>Web</module>
	</modules> 
 -->
 	
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>com.localgis.maven.plugin</groupId>
					<artifactId>updaterPlugin</artifactId>
					<version>3.0</version>
					<executions>
						<execution>
							<phase>compile</phase>
							<goals>
								<goal>moduleDescriptor</goal>
							</goals>
						</execution>
						<execution>
							<id>launchInstall</id>
							<goals>
								<goal>launchInstall</goal>
							</goals>
							<configuration>
								<baseInstall>UNDEFINED</baseInstall>
							</configuration>
						</execution>
					</executions>
					<configuration>
						<moduleName>${module.title}</moduleName>
						<moduleVersion>${module.version}</moduleVersion>
						<installType>${module.installType}</installType>
						<upgradedArtifactId>${module.upgraded.artifactId}</upgradedArtifactId>
						<upgradedVersion>${module.upgraded.version}</upgradedVersion>
						<referencedGroupId>${module.artifact.groupId}</referencedGroupId>
						<referencedArtifactId>${module.artifact.id}</referencedArtifactId>
						<referencedVersion>${module.artifact.version}</referencedVersion>
						<referencedType>${module.artifact.type}</referencedType>
						<referencedFinalName>${module.artifact.finalName}</referencedFinalName>
					</configuration>
				</plugin>
					<!--This plugin's configuration is used to store Eclipse m2e settings 
				only. It has no influence on the Maven build itself. -->
			<plugin>
				<groupId>org.eclipse.m2e</groupId>
				<artifactId>lifecycle-mapping</artifactId>
				<version>1.0.0</version>
				<configuration>
					<lifecycleMappingMetadata>
						<pluginExecutions>
							<pluginExecution>
								<pluginExecutionFilter>
									<groupId>
										org.apache.maven.plugins
									</groupId>
									<artifactId>
										maven-dependency-plugin
									</artifactId>
									<versionRange>
										[2.4,)
									</versionRange>
									<goals>
										<goal>
											unpack-dependencies
										</goal>
										<goal>tree</goal>
									</goals>
								</pluginExecutionFilter>
								<action>
									<ignore></ignore>
								</action>
							</pluginExecution>
							<pluginExecution>
								<pluginExecutionFilter>
									<groupId>
										com.localgis.maven.plugin
									</groupId>
									<artifactId>
										updaterPlugin
									</artifactId>
									<versionRange>
										[3.0,)
									</versionRange>
									<goals>
										<goal>
											moduleDescriptor
										</goal>
									</goals>
								</pluginExecutionFilter>
								<action>
									<ignore></ignore>
								</action>
							</pluginExecution>
						</pluginExecutions>
					</lifecycleMappingMetadata>
				</configuration>
			</plugin>
			</plugins>
		</pluginManagement>
	</build>
		<distributionManagement>
		<repository>
			<id>serverCotesa</id>
			<name>LocalGISIII</name>
			<url>http://srvweblin.grupotecopy.es/nexus/content/repositories/localgis3/</url>
		</repository>
		<snapshotRepository>
			<id>serverCotesa</id>
			<name>LocalGISIII</name>
			<url>http://srvweblin.grupotecopy.es/nexus/content/repositories/localgis3/</url>
		</snapshotRepository>
	</distributionManagement>
</project>