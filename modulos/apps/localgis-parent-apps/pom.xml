<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.localgis</groupId>
	<artifactId>localgis-parent-apps</artifactId>
	<packaging>pom</packaging>
	<version>3.0</version>
	<name>LocalGIS Parent Apps</name>

	<parent>
		<groupId>com.localgis</groupId>
		<artifactId>localgis-parent</artifactId>
		<version>3.0</version>
		<relativePath>..</relativePath>
	</parent>
	
	<properties>
		<!-- codeBase se reemplaza servlet en acceso -->
		<codebaseJnlp>$$codebase</codebaseJnlp>
		<fileJnlp>${project.artifactId}.jnlp</fileJnlp>
		<urlFileJnlp>${fileJnlp}</urlFileJnlp>
		<idExtensionName>externalDeps</idExtensionName>
		<fileExtensionJnlp>${project.artifactId}-externalDeps.jnlp</fileExtensionJnlp>
		<urlFileExtensionJnlp>${fileExtensionJnlp}</urlFileExtensionJnlp>
		<jarFileMain>${project.artifactId}-${project.version}.jar</jarFileMain>
		<relativePathJar>libraries</relativePathJar>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.jfrog.maven.plugins</groupId>
				<artifactId>jfrog-jnlp-plugin</artifactId>
				<version>0.5-LOCALGIS</version>
				<executions>
					<execution>
						<id>generarExtensionJnlp</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>jnlp</goal>
						</goals>
						<configuration>
							<verbose>true</verbose>
							<useMavenLayout>true</useMavenLayout>
							<templateFileName>templateExternalDeps.vm</templateFileName>
							<targetDirectory>target/classes/jnlp</targetDirectory>
							<targetFile>${fileExtensionJnlp}</targetFile>
							<relativePathDependencies>${relativePathJar}</relativePathDependencies>
							<excludes>
								<exclude>com.localgis.*:*:*</exclude>
								
								<!-- Ficheros necesaria firma propia -->
								<exclude>commons-ssl:commons-ssl:*</exclude>
								<exclude>commons-httpclient:commons-httpclient:*</exclude>
								<exclude>com.localgis:deegree:*</exclude>						
								<exclude>log4j:log4j:*</exclude>	
								<exclude>mysql:mysql-connector-java:*</exclude>
								<exclude>com.oracle:ojdbc14:*</exclude>
								<exclude>commons-discovery:commons-discovery:*</exclude>
								<exclude>org.alfresco:alfresco-web-service-client:*</exclude>
								<exclude>net.sf.jasperreports:jasperreports:*</exclude>
								<exclude>org.exolab:castor:*</exclude>
								<exclude>org.codehaus.castor:castor-xml:*</exclude>	
								<exclude>org.codehaus.castor:castor-core:*</exclude>
								<exclude>xerces:xercesImpl:*</exclude>
								<exclude>eclipse:jdtcore:*</exclude>
								<exclude>net.java.dev.flexdock:flexdock:*</exclude>
								<exclude>jasperreports:jasperreports:*</exclude>
								<exclude>org.datavision:datavision:*</exclude>
								<exclude>net.sf.datavision:DataVision:*</exclude>
								<exclude>axis:axis:*</exclude>
								<exclude>org.apache.axis:axis:*</exclude>
								<exclude>org.apache.axis2:axis2:*</exclude>
								<exclude>org.apache.axis2:axis2-kernel:*</exclude>
								<exclude>org.apache.ws.commons.axiom:axiom-api:*</exclude>
								<exclude>org.apache.ws.commons.axiom:axiom-impl:*</exclude>
								<exclude>org.uva.itast:routeEngine:*</exclude>
								<exclude>org.uva.itast:customizedGeotoolsGraph:*</exclude>
								<include>com.routeengine:routeEngine:*</include>
								<exclude>org.jdom:jdom:*</exclude>
								<exclude>org.beanshell:bsh:*</exclude>
								<exclude>com.vividsolutions:jts:*</exclude>
								<exclude>org.geotools:gt-referencing:*</exclude>
								<exclude>org.geotools:gt-metadata:*</exclude>
								<exclude>org.geotools:gt-epsg-hsql:*</exclude>
								<exclude>org.geotools:gt-epsg-extension:*</exclude>
								<exclude>org.geotools:gt-epsg-wkt:*</exclude>
								<exclude>hsqldb:hsqldb:*</exclude>
								<exclude>jetty:javax.servlet:*</exclude>
								<exclude>org.codehaus.xfire:xfire-core:*</exclude>
								<exclude>com.thoughtworks.xstream:xstream:1.4.3</exclude>
								<exclude>com.ibatis:ibatis2-dao-localgis:2.2.0</exclude>
								<exclude>com.ibatis:ibatis2-sqlmap-localgis:2.2.0</exclude>
								<exclude>com.ibatis:ibatis2-common-localgis:2.2.0</exclude>
								<exclude>org.forgerock.openam:openam-clientsdk:10.1.0-Xpress</exclude>
							</excludes>
						</configuration>
					</execution>
				
					<execution>
						<id>generarPrincipalJnlp</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>jnlp</goal>
						</goals>
						<configuration>
							<verbose>true</verbose>
							<useMavenLayout>true</useMavenLayout>
							<attach>true</attach>
							<templateFileName>template.vm</templateFileName>
							<targetDirectory>target/classes/jnlp</targetDirectory>
							<targetFile>${fileJnlp}</targetFile>
							<relativePathDependencies>${relativePathJar}</relativePathDependencies>
							<includes>
								<include>com.localgis.*:*:*</include>
								
								<!-- Ficheros necesaria firma propia -->
								<include>commons-ssl:commons-ssl:*</include>
								<include>commons-httpclient:commons-httpclient:*</include>
								<include>com.localgis:deegree:*</include>						
								<include>log4j:log4j:*</include>	
								<include>mysql:mysql-connector-java:*</include>
								<include>com.oracle:ojdbc14:*</include>
								<include>commons-discovery:commons-discovery:*</include>
								<include>org.alfresco:alfresco-web-service-client:*</include>
								<include>net.sf.jasperreports:jasperreports:*</include>
								<include>org.exolab:castor:*</include>
								<include>org.codehaus.castor:castor-xml:*</include>	
								<include>org.codehaus.castor:castor-core:*</include>
								<include>xerces:xercesImpl:*</include>
								<include>eclipse:jdtcore:*</include>
								<include>net.java.dev.flexdock:flexdock:*</include>
								<include>jasperreports:jasperreports:*</include>
								<include>org.datavision:datavision:*</include>
								<include>net.sf.datavision:DataVision:*</include>
								<include>axis:axis:*</include>
								<include>org.apache.axis:axis:*</include>
								<include>org.apache.axis2:axis2:*</include>
								<include>org.apache.axis2:axis2-kernel:*</include>
								<include>org.apache.ws.commons.axiom:axiom-api:*</include>
								<include>org.apache.ws.commons.axiom:axiom-impl:*</include>
								<include>org.uva.itast:routeEngine:*</include>
								<include>org.uva.itast:customizedGeotoolsGraph:*</include>
								<include>com.routeengine:routeEngine:*</include>
								<include>org.jdom:jdom:*</include>
								<include>org.beanshell:bsh:*</include>
								<include>com.vividsolutions:jts:*</include>
								<include>org.geotools:gt-referencing:*</include>
								<include>org.geotools:gt-metadata:*</include>
								<include>org.geotools:gt-epsg-hsql:*</include>
								<exclude>org.geotools:gt-epsg-extension:*</exclude>
								<exclude>org.geotools:gt-epsg-wkt:*</exclude>
								<include>hsqldb:hsqldb:*</include>
								<include>jetty:javax.servlet:*</include>
								<include>org.codehaus.xfire:xfire-core:*</include>
								<include>com.thoughtworks.xstream:xstream:1.4.3</include>
								<include>com.ibatis:ibatis2-dao-localgis:2.2.0</include>
								<include>com.ibatis:ibatis2-sqlmap-localgis:2.2.0</include>
								<include>com.ibatis:ibatis2-common-localgis:2.2.0</include>
								<include>org.forgerock.openam:openam-clientsdk:10.1.0-Xpress</include>
							</includes>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<!--  Se necesita para el metodo de desregistrar los drivers -->
		<!-- dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>5.1.23</version>
		</dependency-->		
	</dependencies>
</project>
