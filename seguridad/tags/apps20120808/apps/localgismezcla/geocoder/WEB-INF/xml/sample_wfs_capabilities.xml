<?xml version="1.0" encoding="UTF-8"?>
<WFS_Capabilities version="1.0.0">
  <Service>
    <Name>OGCGeocoder</Name>
    <Title>Geopista Geocoder Server</Title>
    <Abstract>Servidor de localizacion de Geopista</Abstract>
    <OnlineResource>http://127.0.0.1:8181/geocoder?</OnlineResource>
  </Service>
  <Capability>
    <Request>
      <GetCapabilities>
        <DCPType>
          <HTTP>
            <Post onlineResource="http://127.0.0.1:8181/geocoder/wfs"/>
            <Get onlineResource="http://127.0.0.1:8181/geocoder/wfs"/>
          </HTTP>
        </DCPType>
      </GetCapabilities>
      <DescribeFeatureType>
        <SchemaDescriptionLanguage>
          <XMLSCHEMA/>
        </SchemaDescriptionLanguage>
        <DCPType>
          <HTTP>
            <Post onlineResource="http://127.0.0.1:8181/geocoder/wfs"/>
            <!-- the use of the Get-request address for
                 DescribeFeatureType request isn't declared as
                 mandatory within the WFS specifications but if not
                 declared a WFS won't work as he should (see WFS
                 specification 1.0.0 OGC Document 01-65 chapter 9.3
                 page 36 -->
            <Get onlineResource="http://127.0.0.1:8181/geocoder/wfs"/>
          </HTTP>
        </DCPType>
      </DescribeFeatureType>
      <GetFeature>
        <ResultFormat>
          <XML className="org.deegree_impl.services.wfs.XMLResponseHandler"/>
          <GML2 className="org.deegree_impl.services.wfs.GMLResponseHandler"/>
          <FEATURECOLLECTION className="org.deegree_impl.services.wfs.FCResponseHandler"/>
        </ResultFormat>
        <DCPType>
          <HTTP>
            <Post onlineResource="http://127.0.0.1:8181/geocoder/wfs"/>
          </HTTP>
        </DCPType>
      </GetFeature>
    </Request>
  </Capability>
  <FeatureTypeList>
    <Operations>
      <Query/>
    </Operations>
    <FeatureType>
      <ResponsibleClass className="org.deegree_impl.services.wfs.postgis.PostgisDataStore" configURL="file:///C:/geocoder/WEB-INF/xml/parcelas_config.xml"/>
       <!--org.deegree_impl.services.wfs.postgis.PostgisDataStore"-->
      <Name>Parcelas</Name>
      <Title>Parcelas geopista</Title>
      <SRS>EPSG:23028</SRS>
      <LatLonBoundingBox minx="-180.0" miny="-90.0" maxx="180.0" maxy="90.0" />
    </FeatureType>
    <FeatureType>
      <ResponsibleClass className="org.deegree_impl.services.wfs.postgis.PostgisDataStore" configURL="file:///C:/geocoder/WEB-INF/xml/geocodificacion_config.xml"/>
      <Name>geocodificacion</Name>
      <Title>Geocodificacion geopista</Title>
      <SRS>EPSG:23030</SRS>
      <LatLonBoundingBox minx="-180.0" miny="-90.0" maxx="180.0" maxy="90.0" />
    </FeatureType>
  </FeatureTypeList>
</WFS_Capabilities>
