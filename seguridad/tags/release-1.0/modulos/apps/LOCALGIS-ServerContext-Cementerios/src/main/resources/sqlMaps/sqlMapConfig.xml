<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig SYSTEM "http://www.ibatis.com/dtd/sql-map-config-2.dtd">
<sqlMapConfig>   

	<properties resource="localgisServer.properties"/>

    <settings useStatementNamespaces="true"/>
	<transactionManager type="JDBC"> 
          <dataSource type="SIMPLE"> 
               <property name="JDBC.Driver" value="${localgis.ddbbconnection.driver}" /> 
               <property name="JDBC.ConnectionURL" value="${localgis.ddbbconnection.url}" /> 
               <property name="JDBC.Username" value="${localgis.ddbbconnection.username}" /> 
               <property name="JDBC.Password" value="${localgis.ddbbconnection.password}" /> 
               <property name="JDBC.DefaultAutoCommit" value="true" /> 
               <property name="Pool.MaximumActiveConnections" value="10" /> 
               <property name="Pool.MaximumIdleConnections" value="5" /> 
               <property name="Pool.MaximumCheckoutTime" value="120000" /> 
          </dataSource> 
     </transactionManager>
